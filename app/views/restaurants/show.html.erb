<div class="container-fluid">
  <div class="mt-3 container border">
    <p class="text-decoration-none"><%= link_to "Go home", restaurants_path %></p>
    <h1 class="text-primary"><%= @restaurant.name %></h1>
    <h2 class="text-secondary"><%= @restaurant.address %></h2>
    <h3 class="text-secondary"><%= @restaurant.category %></h3>
  </div>


  <div class="mt-5 container shadow">
    <%= link_to "Review #{@restaurant.name}", new_restaurant_review_path(@restaurant) %>
    <h2>Reviews:</h2>
    <% @restaurant.reviews.each do |r| %>
      <h5><%= r.rating %></h3>
      <p><%= r.content %></p>
    <% end %>
  </div>
</div>
